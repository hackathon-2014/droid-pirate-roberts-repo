<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical">

    <Button android:id="@+id/addToCategory1"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:background="@color/button_background"
        android:layout_margin="@dimen/button_margin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/add_category1" />

    <Button android:id="@+id/addToCategory2"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:background="@color/button_background"
        android:layout_margin="@dimen/button_margin"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/add_category2" />

    <Button android:id="@+id/addToCategory3"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:background="@color/button_background"
        android:layout_margin="@dimen/button_margin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="@string/add_category3" />

    <Button android:id="@+id/addToCategory4"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:background="@color/button_background"
        android:layout_margin="@dimen/button_margin"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/add_category4" />

</RelativeLayout>